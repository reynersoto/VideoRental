@model WebMvcPruebaMosh.ViewModels.AssignRoleViewModel

<h2>Asignar Rol a Usuario</h2>

<form asp-action="AssignRole" method="post">
    <div class="form-group">
        <label for="SelectedUserId">Usuario</label>
        <select asp-for="SelectedUserId" class="form-control" asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
            <option value="">-- Seleccionar Usuario --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="SelectedRole">Rol</label>
        <select asp-for="SelectedRole" class="form-control" asp-items="@(new SelectList(Model.Roles, "Name", "Name"))">
            <option value="">-- Seleccionar Rol --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Asignar Rol</button>
</form>

@if (!string.IsNullOrEmpty(ViewData["Message"]?.ToString()))
{
    <div class="alert alert-success">
        @ViewData["Message"]
    </div>
}